---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
  classNames?: string;
}

const { noPadding = false, ariaHidden = true, classNames = "" } = Astro.props;
---

<div
  class:list={["mx-auto max-w-app", classNames, noPadding ? "px-0" : "px-4"]}
>
  <hr class="border-border" aria-hidden={ariaHidden} />
</div>
