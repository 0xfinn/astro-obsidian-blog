---
import Hr from "./Hr.astro";
import IconX from "@/assets/icons/IconX.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import LinkButton from "./LinkButton.astro";
import { SITE } from "@/config";
// import { SpinningText } from "@/components/magicui/spinning-text";

const { pathname } = Astro.url;

// Remove trailing slash from current pathname if exists
const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const isActive = (path: string) => {
  const currentPathArray = currentPath.split("/").filter(p => p.trim());
  const pathArray = path.split("/").filter(p => p.trim());

  return currentPath === path || currentPathArray[0] === pathArray[0];
};
---

<header
  class="sticky top-0 z-50 w-full bg-transparent backdrop-blur-2xl backdrop-saturate-150 sm:border-b lg:top-4 lg:left-[calc((100vw-var(--container-3xl)-2em)/2)] lg:max-w-[calc(var(--container-3xl)+2em)] lg:rounded-full lg:border lg:border-border"
>
  <a
    id="skip-to-content"
    href="#main-content"
    class="absolute start-16 -top-[100vh] z-50 px-3 py-2 text-accent backdrop-blur-lg transition-all focus:top-4"
  >
    Skip to content
  </a>
  <div
    id="nav-container"
    class="mx-auto flex max-w-app flex-col items-center justify-between sm:flex-row"
  >
    <div
      id="top-nav-wrap"
      class="relative flex w-full items-baseline justify-between bg-background p-4 sm:h-14 sm:items-center sm:bg-transparent sm:py-0 lg:h-12"
    >
      <!-- 左侧：网站标题 -->
      <a
        href="/"
        class="absolute py-1 leading-8 font-semibold whitespace-nowrap sm:static sm:my-auto sm:flex-shrink-0 sm:text-xl sm:leading-none"
      >
        <!-- <MorphingText client:load texts={["Be Good One", "Break Go On", "Big Go", "Better Go On"]} /> -->
        {SITE.title}
      </a>

      <!-- 中间：主导航菜单（桌面端） -->
      <nav
        id="main-nav"
        class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-center"
      >
        <ul class="flex items-center gap-x-2">
          <li>
            <a
              href="/posts"
              class:list={[
                "px-3 py-2 text-base font-medium transition-colors hover:text-accent",
                { "active-nav": isActive("/posts") },
              ]}
            >
              文章
            </a>
          </li>
          <li>
            <a
              href="/diary"
              class:list={[
                "px-3 py-2 text-base font-medium transition-colors hover:text-accent",
                { "active-nav": isActive("/diary") },
              ]}
            >
              碎碎念
            </a>
          </li>
          <li>
            <a
              href="/about"
              class:list={[
                "px-3 py-2 text-base font-medium transition-colors hover:text-accent",
                { "active-nav": isActive("/about") },
              ]}
            >
              关于
            </a>
          </li>
        </ul>
      </nav>

      <!-- 右侧：功能按钮（桌面端） -->
      <div class="hidden sm:flex sm:flex-shrink-0 sm:items-center sm:gap-x-2">
        {
          SITE.showArchives && (
            <LinkButton
              href="/archives"
              class:list={[
                "focus-outline flex px-2 py-1",
                {
                  "active-nav [&>svg]:stroke-accent": isActive("/archives"),
                },
              ]}
              ariaLabel="archives"
              title="Archives"
            >
              <IconArchive class="w-4" />
              <span class="sr-only">收集箱</span>
            </LinkButton>
          )
        }
        <LinkButton
          href="/search"
          class:list={[
            "focus-outline flex px-2 py-1",
            { "active-nav [&>svg]:stroke-accent": isActive("/search") },
          ]}
          ariaLabel="search"
          title="Search"
        >
          <IconSearch class="w-4" />
          <span class="sr-only">搜索</span>
        </LinkButton>
        {
          SITE.lightAndDarkMode && (
            <button
              id="theme-btn"
              class="focus-outline relative size-8 px-2 py-1 hover:[&>svg]:stroke-accent"
              title="Toggles light & dark"
              aria-label="auto"
              aria-live="polite"
            >
              <IconMoon class="absolute top-[50%] left-[50%] w-4 -translate-[50%] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90" />
              <IconSunHigh class="absolute top-[50%] left-[50%] w-4 -translate-[50%] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0" />
            </button>
          )
        }
      </div>

      <!-- 移动端导航 -->
      <nav id="nav-menu" class="flex w-full flex-col items-center sm:hidden">
        <button
          id="menu-btn"
          class="focus-outline self-end p-2"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <IconX id="close-icon" class="hidden" />
          <IconMenuDeep id="menu-icon" />
        </button>
        <ul
          id="menu-items"
          class:list={[
            "mt-4 grid w-44 grid-cols-2 place-content-center gap-2",
            "[&>li>a]:block [&>li>a]:px-4 [&>li>a]:py-3 [&>li>a]:text-center [&>li>a]:text-base [&>li>a]:font-medium [&>li>a]:hover:text-accent",
            "hidden",
          ]}
        >
          <li class="col-span-2">
            <a href="/posts" class:list={{ "active-nav": isActive("/posts") }}>
              文章
            </a>
          </li>
          <li class="col-span-2">
            <a href="/diary" class:list={{ "active-nav": isActive("/diary") }}>
              碎碎念
            </a>
          </li>
          <li class="col-span-2">
            <a href="/about" class:list={{ "active-nav": isActive("/about") }}>
              关于
            </a>
          </li>
          {
            SITE.showArchives && (
              <li class="col-span-2">
                <LinkButton
                  href="/archives"
                  class:list={[
                    "focus-outline flex justify-center p-3",
                    {
                      "active-nav [&>svg]:stroke-accent": isActive("/archives"),
                    },
                  ]}
                  ariaLabel="archives"
                  title="Archives"
                >
                  <IconArchive class="hidden w-8 sm:inline-block" />
                  <span class="sm:sr-only">收集箱</span>
                </LinkButton>
              </li>
            )
          }
          <li class="col-span-1 flex items-center justify-center">
            <LinkButton
              href="/search"
              class:list={[
                "focus-outline flex p-3",
                { "active-nav [&>svg]:stroke-accent": isActive("/search") },
              ]}
              ariaLabel="search"
              title="Search"
            >
              <IconSearch class="w-8" />
              <span class="sr-only">搜索</span>
            </LinkButton>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li class="col-span-1 flex items-center justify-center">
                <button
                  id="theme-btn-mobile"
                  class="focus-outline relative size-12 p-4 hover:[&>svg]:stroke-accent"
                  title="Toggles light & dark"
                  aria-label="auto"
                  aria-live="polite"
                >
                  <IconMoon class="absolute top-[50%] left-[50%] w-8 -translate-[50%] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90" />
                  <IconSunHigh class="absolute top-[50%] left-[50%] w-8 -translate-[50%] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0" />
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>
  <Hr classNames="sm:hidden" />
</header>

<script>
  function toggleNav() {
    const menuBtn = document.querySelector("#menu-btn");
    const menuItems = document.querySelector("#menu-items");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    menuBtn.addEventListener("click", () => {
      const openMenu = menuBtn.getAttribute("aria-expanded") === "true";

      menuBtn.setAttribute("aria-expanded", openMenu ? "false" : "true");
      menuBtn.setAttribute("aria-label", openMenu ? "Open Menu" : "Close Menu");

      menuItems.classList.toggle("hidden");
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
</script>
